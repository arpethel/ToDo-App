<section class="todoapp">
	<header class="header">
		<h1>todos</h1>
		<%= form_for(@list) do |f| %>
			<%= f.text_field :name, :class => "new-todo", :placeholder => (@list.errors.full_messages_for(:name).first || "Enter A New Name") %>
			<%= f.submit :style => "display: none" %>
		<% end %>
	</header>
	<section class="main">
		<input id="toggle-all" class="toggle-all" >
		<label for="toggle-all">Mark all as complete</label>
		<ul class="todo-list">
			<% @lists.each do |list| %>
			<li>
				<div class="view">
					<label><%= link_to list.name, list_path(list) %></label>
				</div>
			</li>
			<% end %>
		</ul>
	</section>
	<footer class="footer">
	</footer>
	
</section>